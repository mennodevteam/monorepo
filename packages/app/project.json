{
  "name": "app",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "packages/app/src",
  "prefix": "",
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/app",
        "index": "packages/app/src/index.html",
        "main": "packages/app/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "packages/app/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": ["packages/app/src/favicon.ico", "packages/app/src/assets", "packages/app/src/liara_nginx.conf"],
        "styles": [
          "packages/app/src/styles.scss",
          {
            "input": "packages/app/src/theme/amber-theme.scss",
            "inject": false,
            "bundleName": "amber-theme"
          },
          {
            "input": "packages/app/src/theme/blue-theme.scss",
            "inject": false,
            "bundleName": "blue-theme"
          },
          {
            "input": "packages/app/src/theme/default-theme.scss",
            "inject": false,
            "bundleName": "default-theme"
          },
          {
            "input": "packages/app/src/theme/green-theme.scss",
            "inject": false,
            "bundleName": "green-theme"
          },
          {
            "input": "packages/app/src/theme/red-theme.scss",
            "inject": false,
            "bundleName": "red-theme"
          }
        ],
        "stylePreprocessorOptions": {
          "includePaths": ["packages/app/src/theme/"]
        },
        "scripts": ["node_modules/persian-date/dist/persian-date.js"]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "fileReplacements": [
            {
              "replace": "packages/app/src/environments/environment.ts",
              "with": "packages/app/src/environments/environment.prod.ts"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "options": {
        "port": 4300
      },
      "configurations": {
        "production": {
          "browserTarget": "app:build:production"
        },
        "development": {
          "browserTarget": "app:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "app:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["packages/app/**/*.ts", "packages/app/**/*.html"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/app/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
