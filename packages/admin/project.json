{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "packages/admin/src",
  "prefix": "menno",
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/admin",
        "index": "packages/admin/src/index.html",
        "main": "packages/admin/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "packages/admin/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          "packages/admin/src/favicon.ico",
          "packages/admin/src/assets",
          "packages/admin/src/liara_nginx.conf",
          "packages/admin/src/liara.json"
        ],
        "styles": ["packages/admin/src/styles.scss"],
        "stylePreprocessorOptions": {
          "includePaths": ["packages/admin/src/theme/"]
        },
        "scripts": ["node_modules/persian-date/dist/persian-date.min.js"]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "1mb",
              "maximumError": "4mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "fileReplacements": [
            {
              "replace": "packages/admin/src/environments/environment.ts",
              "with": "packages/admin/src/environments/environment.prod.ts"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "options": {
        "port": 4400
      },
      "configurations": {
        "production": {
          "browserTarget": "admin:build:production"
        },
        "development": {
          "browserTarget": "admin:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "admin:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["packages/admin/**/*.ts", "packages/admin/**/*.html"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/admin/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
